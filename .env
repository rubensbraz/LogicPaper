# ==========================================
# LOGICPAPER CONFIGURATION
# ==========================================

# --- APP INFO ---
PROJECT_NAME="LogicPaper"
VERSION="1.1"
DEBUG=false
API_PREFIX="/api/v1"

# --- SECURITY ---
# Generate a strong key (e.g., openssl rand -hex 32)
LOGICPAPER_API_KEY="secret-key"

# CORS (Comma-separated list of allowed domains)
ALLOWED_ORIGINS="*"

# --- FILESYSTEM ---
# Absolute or relative paths inside the container
TEMP_DIR="/data/temp"
PERSISTENT_TEMPLATES_DIR="/app/persistent_templates"

# --- WORKER / JOBS ---
# Time to keep temporary files before deleting (in seconds)
CLEANUP_INTERVAL_SECONDS=3600  # 3600 = 1 hour
# Timeout for LibreOffice conversion process (in seconds)
# Prevents the worker from hanging indefinitely on corrupted files
LIBREOFFICE_TIMEOUT=1800

# --- LOCALIZATION ---
DEFAULT_LOCALE="pt_BR"

# --- SYSTEM / PYTHON ---
# Force stdout/stderr to be unbuffered (real-time logs)
PYTHONUNBUFFERED=1
# Prevent Python from generating .pyc files
PYTHONDONTWRITEBYTECODE=1
# Set explicit Timezone
TZ="America/Sao_Paulo"